{
    "manifest_version": 3,
    "name": "Claude Memory Extension",
    "version": "0.1.0",
    "description": "Summarize Claude conversations into personalized memory.",

    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://claude.ai/*"
    ],

    "content_scripts": [
        {
            "matches": ["https://claude.ai/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}